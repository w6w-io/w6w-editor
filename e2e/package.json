{
  "name": "@w6w/e2e",
  "version": "0.0.0",
  "private": true,
  "description": "End-to-end tests for W6W API and UI",
  "type": "module",
  "scripts": {
    "server": "tsx utils/test-server.ts",
    "server:start": "tsx utils/test-server.ts &",
    "test": "playwright test",
    "test:api": "playwright test --project=api",
    "test:ui": "playwright test --project=chromium",
    "test:ui:all": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
    "codegen": "playwright codegen"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^20.19.0",
    "tsx": "^4.19.0",
    "typescript": "catalog:",
    "zod": "^3.24.0"
  }
}
