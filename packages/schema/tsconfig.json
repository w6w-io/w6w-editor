{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["__tests__", "__mocks__", "scripts", "dist", "node_modules"]
}
